<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">


  <ImageView
    android:id="@+id/dummyIvPartyFlag"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:src="@drawable/placeholder_rect"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <View
    android:id="@+id/dummyTvPartyName"
    style="@style/TextLarge.Bold"
    android:layout_width="0dp"
    android:layout_height="14dp"
    android:layout_marginStart="8dp"
    android:background="@color/grey"
    app:layout_constraintBottom_toBottomOf="@+id/dummyIvPartyFlag"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/dummyIvPartyFlag"
    app:layout_constraintTop_toTopOf="@+id/dummyIvPartyFlag"
    app:layout_constraintVertical_bias="0.00" />

  <View
    android:id="@+id/dummyTPartyRegion"
    android:layout_width="0dp"
    android:layout_height="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/grey"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/dummyIvPartyFlag"
    app:layout_constraintTop_toBottomOf="@id/dummyTvPartyName"
    tools:text="@sample/party.csv/Region" />

  <View
    android:id="@+id/dummyTvPartyRegionTwo"
    android:layout_width="0dp"
    android:layout_height="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:background="@color/grey"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/dummyIvPartyFlag"
    app:layout_constraintTop_toBottomOf="@id/dummyTPartyRegion"
    app:layout_constraintVertical_bias="0.0"
    tools:text="@sample/party.csv/Region" />

</androidx.constraintlayout.widget.ConstraintLayout>