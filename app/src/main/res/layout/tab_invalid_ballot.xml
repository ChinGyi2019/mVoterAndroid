<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/ivAcceptBallot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:src="@drawable/ic_check_circle_24"
    android:tint="@color/green"
    app:layout_constraintEnd_toEndOf="@+id/tvAcceptBallot"
    app:layout_constraintStart_toStartOf="@+id/tvAcceptBallot"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tvAcceptBallot"
    style="@style/TextLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="@string/valid_ballot"
    app:layout_constraintStart_toEndOf="@id/guideline50PercentVertical"
    app:layout_constraintTop_toBottomOf="@id/ivAcceptBallot" />

</androidx.constraintlayout.widget.ConstraintLayout>

